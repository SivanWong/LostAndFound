/* pages/foundermsg/foundermsg.wxss */
page{
  width: 100%;
  height: 100%;
  background:  #ECECEC;
  display: flex;
  justify-content: center;
  align-items: center;

}
.msg-big-box{
  width: 90%;
  padding-bottom: 80rpx;
  background: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.title{
  font-size: 60rpx;
  color: #333;
  padding: 40rpx 0;
}
.msg-box{
  width: 80%;
 display: flex;
 flex-direction: column;
  align-items: centers;
  position: relative
}
.msg-box>text{
  padding: 35rpx;
}
.msg-box:after{
  content: " ";
  position: absolute;
  left: 0;
  bottom: 0;
  right: 0;
  height: 1px;
  border-bottom: 1rpx solid #D9D9D9;
  color: #D9D9D9;
}
.msg-value{
  padding-left: 30rpx;
}
.msg-img image{
  width:400rpx;
  height:400rpx;
  border: 1px solid  #D9D9D9;
  margin-top: 70rpx;
}
.report{
  text-decoration: underline;
  padding-left: 100rpx;
  font-size: 15px;
}