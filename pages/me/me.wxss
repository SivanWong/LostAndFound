page{
  width: 100%;
  height: 100%;
}
.log-box{
  width: 96%;
  height: 30%;
  background:#333;
  display: flex;
  align-items:center; 
  border-radius: 15rpx;
  margin:20px auto;
}
.user-head image{
  width:250rpx;
  height: 250rpx;
  background:rgb(232,230,231);
  border-radius: 50%;
  margin-left: 5%;
  margin-right: 30rpx;
}
.user-name{
  padding-bottom: 35rpx;
  color: #fff;
}
.cells{
  position: relative;
  padding:15px 15px;
  display: flex;
  align-items: center;
  font-size: 17px;
  margin-left: 10px;
}
.cells:after {
  content: " ";
  position: absolute;
  left: 0;
  bottom: 0;
  right: 0;
  height: 1px;
  border-bottom: 1rpx solid #D9D9D9;
  color: #D9D9D9;
}
.cells-access{
  position: absolute;
  right: 15px;
}
.cells-active{
  background: #ECECEC;
}
.cells-access:after {
  content: " ";
  display: inline-block;
  height: 6px;
  width: 6px;
  border-width: 2px 2px 0 0;
  border-color: #C8C8CD;
  border-style: solid;
  -webkit-transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
          transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  position: relative;
  top: -2px;
  margin-top: -4px; 
  right: 2px;
}  
